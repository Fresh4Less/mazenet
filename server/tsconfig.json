{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false
    },
    "include": [
    	"src/**/*",
    	"test/**/*"
	],
	"paths": {
		"*": [
			"node_modules/*",
			"src/types/*"
		]
	}
}

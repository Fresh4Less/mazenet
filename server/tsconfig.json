{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
    },
    "include": [
    	"src/**/*"
	],
	"baseUrl": ".",
	"paths": {
		"*": [
			"node_modules/*",
			"src/types/*"
		]
	}
}
